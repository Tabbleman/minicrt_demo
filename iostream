namespace cheems{
  #define __USE_TEMPLATE_(_1)                 template<typename _1>
  #define __USE_TEMPLATE_(_1,_2)              template<typename _1, typename _2>
  #define __USE_TEMPLATE_(_1,_2,_3)           template<typename _1, typename _2, typename _3>
  #define __USE_TEMPLATE_(_1,_2,_3,_4)        template<typename _1, typename _2, typename _3, typename _4>

  class ofstream  ;
  class istream   ;
  class ostream   ;
  class ifstream  ;

};